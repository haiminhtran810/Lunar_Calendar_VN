<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/whiteFive"
              android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        <androidx.viewpager.widget.ViewPager
                android:id="@+id/view_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:background="@color/blu_main"/>


        <include
                android:id="@+id/layout_header"
                layout="@layout/layout_header"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:id="@+id/lg_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/txt_author">

        <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:id="@+id/tv_hour_can_chi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp_14"
                    tools:text="10:18"/>

            <TextView
                    android:id="@+id/tv_hour"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp_26"
                    android:textStyle="bold"
                    tools:text="10:18"/>

            <TextView
                    android:paddingStart="@dimen/dp_5"
                    android:paddingEnd="@dimen/dp_5"
                    android:id="@+id/tv_hour_gold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:lines="2"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp_14"
                    tools:text="Ty, dan mau"/>
        </LinearLayout>

        <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:id="@+id/tv_date_lunar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    tools:text="21"
                    android:textAlignment="center"
                    android:textColor="@color/red"
                    android:textSize="@dimen/sp_60"/>
            <TextView
                    android:id="@+id/tv_month"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:text="Tháng 1"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp_14"/>
        </LinearLayout>

        <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:textSize="@dimen/sp_14"
                    android:id="@+id/tv_can_chi_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Ngày Tân Hợi"
                    android:textColor="@android:color/black"/>

            <TextView
                    android:textSize="@dimen/sp_14"
                    android:id="@+id/tv_can_chi_month"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Tháng Định Mão"
                    android:textColor="@android:color/black"/>

            <TextView
                    android:textSize="@dimen/sp_14"
                    android:id="@+id/tv_can_chi_year"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Năm Kỷ Hợi"
                    android:textColor="@android:color/black"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
