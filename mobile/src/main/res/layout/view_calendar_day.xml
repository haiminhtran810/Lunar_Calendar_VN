<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dp_5"
        android:background="@android:color/white"
        android:layout_height="wrap_content">
    <LinearLayout
            android:layout_marginEnd="@dimen/dp_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/lg_calendar_day"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:textColor="@android:color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold"
                android:text="12"
                android:id="@+id/tv_calendar_day_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <FrameLayout
                android:layout_marginStart="@dimen/dp_4"
                app:layout_constraintBottom_toBottomOf="@id/tv_calendar_day_text"
                android:layout_marginEnd="@dimen/dp_15"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/bg_hour_gold"
                android:layout_width="@dimen/dp_4"
                android:layout_height="@dimen/dp_4"
                android:background="@drawable/oval_purple_solid"/>
    </LinearLayout>
    <TextView
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lg_calendar_day"
            android:textStyle="italic"
            android:text="12"
            android:id="@+id/tv_lunar_day_text"
            android:textSize="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>
